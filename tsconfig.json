{
  "exclude": ["coverage", "./dist", "__tests__", "jest.config.ts", "jest-e2e.config.ts", "jest-all.config.ts"],
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [ "src" ]
}