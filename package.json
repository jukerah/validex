{
  "name": "vkrun",
  "version": "0.22.0",
  "description": "Vkrun is a runtime data validation library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [],
  "author": "Mario Elvio",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/jukerah/vkrun#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jukerah/vkrun.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage=false",
    "test:e2e": "jest  --coverage --detectOpenHandles=false --watch --config=jest-e2e.config.ts --forceExit",
    "test:all": "jest  --coverage --detectOpenHandles=false --watch --config=jest-all.config.ts --forceExit",
    "test:coverage": "jest",
    "test:staged": "jest --passWithNoTests",
    "test:ci": "npm test -- --coverage=true",
    "pre-commit": "lint-staged",
    "changeset": "packages/cli/bin.js",
    "release": "yarn build && changeset publish",
    "start": "ts-node src/server.ts"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext *.ts --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^6.0.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "axios": "^1.6.7",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "*"
  }
}
